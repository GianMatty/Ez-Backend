

<div class="container p-4">
    <form action="/links/edit/{{link.id}}" method="POST">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{link.title}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion" value="{{link.description}}" ></textarea>
                        </div>        
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="card">
                    <div class="card-body">
    
                        <div class="form-group">     
                            <textarea class="form-control" name="url" id="example" placeholder="Inserte su Codigo" value="{{link.db}}"  rows="10"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Generar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
